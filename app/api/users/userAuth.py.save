async def verify_clerk_token_header(request: Request) -> str:
    auth_header = request.headers.get("Authorization")
    if not auth_header:
        raise HTTPException(status_code=401, detail="Authorization token required")

    token = auth_header.split("Bearer ")[-1]
    try:
        token_data = await get_clerk_token_claims(token)
        return token_data["claims"]["email"]
    except Exception:
        raise HTTPException(status_code=401, detail="Invalid or expired Clerk token")

